@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Seomark</title>

    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/seomark/css/bootstrap.css" />
    <!-- fonts awesome style -->
    <link href="~/seomark/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/seomark/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/seomark/css/responsive.css" rel="stylesheet" />
</head>

<body class="sub_page">


    <!-- contact section -->

    <section class="contact_section layout_padding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-5 col-lg-4 offset-md-1 offset-lg-2">
                    <div class="form_container">
                        <div class="heading_container">
                            <h2>
                                BİZE ULAŞIN
                            </h2>
                        </div>
                        <form method="post">
                            <div>
                                <input type="text" name="Email" placeholder="Mail " />
                            </div>
                            <div>
                                <input type="text" name="Subject" placeholder="Konu" />
                            </div>
                            <div>
                                <input type="text" name="Message" placeholder="Mesaj" />
                            </div>
                            <div class="d-flex ">
                                <button>
                                    GÖNDER
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6  px-0">
                    <div class="map_container">
                        <div class="map">
                            <div id="googleMap"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <script src="~/seomark/js/jquery-3.4.1.min.js"></script>
    <script src="~/seomark/js/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="~/seomark/js/custom.js"></script>
    <!-- Google Map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCh39n5U-4IoWpsVGUHWdqB6puEkhRLdmI&callback=myMap"></script>
    <!-- End Google Map -->
</body>

</html>


